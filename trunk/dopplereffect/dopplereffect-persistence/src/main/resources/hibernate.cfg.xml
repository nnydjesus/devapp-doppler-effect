<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
	<session-factory>

		<property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

		<!-- JDBC connection pool (use the built-in) -->
		<property name="connection.pool_size">1</property>

		<!-- Enable Hibernate's automatic session context management -->
		<property name="current_session_context_class">thread</property>

		<!-- Disable the second-level cache -->
		<property name="cache.provider_class">org.hibernate.cache.NoCacheProvider</property>

		<property name="hibernate.connection.isolation">4</property>

		<!-- Echo all executed SQL to stdout -->
		<property name="hibernate.show_sql">true</property>

		<!-- Mappings -->
		<mapping resource="mappings/CareerData.hbm.xml" />
		<mapping resource="mappings/Address.hbm.xml" />
		<mapping resource="mappings/PersonalData.hbm.xml" />
		<mapping resource="mappings/Employee.hbm.xml" />
		<mapping resource="mappings/LeaveRequestType.hbm.xml" />
		<mapping resource="mappings/DurationStrategy.hbm.xml" />
		<mapping resource="mappings/Assignable.hbm.xml" />

	</session-factory>

</hibernate-configuration>