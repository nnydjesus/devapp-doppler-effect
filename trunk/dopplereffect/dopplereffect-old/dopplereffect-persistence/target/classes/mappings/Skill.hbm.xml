<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ar.edu.unq.dopplereffect.project">

	<class name="Skill" table="skill">

		<id name="id" type="java.lang.Long">
			<generator class="native" />
		</id>
		
		<many-to-one name="type" class="SkillType"
			column="type_id" not-null="true" cascade="all"	unique="true" />
			
		<property name="level" type="ar.edu.unq.dopplereffect.persistence.util.SkillLevelEnumType" column="level" not-null="true" />

	</class>

</hibernate-mapping>