<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ar.edu.unq.dopplereffect.leaverequests">

	<class name="LeaveRequestDaysConfiguration" table="leave_request_days_configuration">
		
		<id name="id" type="java.lang.Long">
			<generator class="assigned" />
		</id>
	
		<property name="minYear" column="min_year" not-null="true" />
		
		<property name="correspondingDays" column="corresponding_days" not-null="true" />
		
	</class>

</hibernate-mapping>