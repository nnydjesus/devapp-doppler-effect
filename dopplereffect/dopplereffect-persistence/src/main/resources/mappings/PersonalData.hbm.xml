<?xml version="1.0"?>

<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
		  "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="ar.edu.unq.dopplereffect.data" >

	<class name="PersonalData" table="personal_data" >
	
		<id name="id" type="java.lang.Long" >
			<generator class="increment" />
		</id>
		
		<property name="firstName" column="first_name" not-null="true" />
		
		<property name="phoneNumber" column="phone_number" not-null="false" />
		
		<property name="email" not-null="false" />
		
		<many-to-one name="address" class="ar.edu.unq.dopplereffect.data.Address"
		column="address_id" not-null="true" cascade="all" unique="true" />
		
		<union-subclass name="ar.edu.unq.dopplereffect.employees.EmployeeData" table="employee_data" >
		
			<property name="dni" not-null="true" />
			
			<property name="lastName" column="last_name" not-null="true" />
			
		</union-subclass>
		
	</class>

</hibernate-mapping>